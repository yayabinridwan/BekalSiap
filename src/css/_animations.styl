.order-enter
  transform: translateX(-120%)
  max-height: 0
  padding 0 !important
  transition 0.5s
  &.order-enter-active
    max-height: 60px
    padding 2rem 0 !important
    transform: translateX(0)

.order-exit
  transition 0.5s
  transform: translateX(0)
  &.order-exit-active
    padding 0
    transform: translateX(120%)

.count-enter
  transition: .5s
  transform: translateY(100%)
  &.count-enter-active
    transform: translateY(0)

.count-exit
  transition: .5s
  transform: translateY(0)
  left 0
  bottom 0
  position: absolute
  &.count-exit-active
    transform: translateY(-100%)